{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/tauri-conf-schema.json",
  "productName": "Jira Time Tracker",
  "version": "0.1.0",
  "identifier": "com.jira-time-tracker.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Jira Time Tracker",
        "width": 400,
        "height": 550,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "resizable": false,
        "alwaysOnTop": true,
        "transparent": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
